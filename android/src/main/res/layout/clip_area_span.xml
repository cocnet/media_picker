<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_rounder_border"
    android:gravity="center_vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">


        <View
            android:id="@+id/timeSpanShadow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" />

        <ImageView
            android:id="@+id/leftHandle"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@mipmap/trimline_default_left" />

        <ImageView
            android:id="@+id/rightHandle"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@mipmap/trimline_default_right" />

    </RelativeLayout>
</RelativeLayout>