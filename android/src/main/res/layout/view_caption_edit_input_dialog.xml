<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@drawable/edit_dialog_fragment_background"
    >
    <RelativeLayout
        android:id="@+id/rl_content_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="4dp">

        <EditText
            android:id="@+id/et_text_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:maxHeight="125dp"
            
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="16dp"
            
            android:layout_toLeftOf="@+id/tv_input_done"
            android:background="@drawable/shape_border_animatesticker_background"
            android:gravity="center_vertical"
            android:hint="点击输入文字"
            android:paddingStart="12dp"
            android:paddingLeft="5dp"
            android:textColor="@android:color/white"
            android:textColorHint="#66ffffff"
            android:textSize="16sp" 
            android:inputType="textMultiLine"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_input_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:text="完成"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>